{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} Vérification 2FA
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
            Vérification 2FA
        </h1>
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 bg-white p-4 m-0 text-primary">

                <p class="text-center mb-4">
                    Entrez le code à 6 chiffres généré par votre application Google Authenticator.
                </p>

                {% if error is defined and error %}
                    <div class="alert alert-danger mt-3">{{ error }}</div>
                {% endif %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger mt-3">{{ message }}</div>
                {% endfor %}

                <form method="post" action="#">
                    <input
                        type="tel"
                        name="code"
                        id="inputCode"
                        class="form-control mb-3"
                        placeholder="Code à 6 chiffres"
                        required
                        autofocus
                        pattern="\d{6}"
                        inputmode="numeric"
                        maxlength="6"
                    >
                    <div class="text-center">
                        <button type="submit" class="btn btn-lg btn-primary mt-2">
                            Vérifier
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}
